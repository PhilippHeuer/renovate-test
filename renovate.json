{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>cidverse/renovate-config:default"],
  "baseBranches": ["main"],
  "assignees": [],
  "reviewers": ["PhilippHeuer"],
  "packageRules": [
    {
      "matchSourceUrlPrefixes": ["https://github.com/"],
      "prBodyDefinitions": {
        "OpenSSF": "[![OpenSSF](https://img.shields.io/ossf-scorecard/github.com/{{sourceRepo}}?label=OpenSSF&style=flat)](https://securityscorecards.dev/viewer/?uri=github.com/{{sourceRepo}})"
      }
    },
    {
      "matchDatasources": ["maven"],
      "prBodyDefinitions": {
        "Reproducible": "{{#if newVersion}}[![Reproducible Builds](https://img.shields.io/endpoint?url=https://jvm-rebuild.philippheuer.de/v1/badge/reproducible/maven/{{depName}}/{{{newVersion}}}?theme=renovate)](https://jvm-rebuild.philippheuer.de/v1/redirect/reproducible/maven/{{depName}}/{{{newVersion}}}){{/if}}"
      },
      "prBodyColumns": [
        "Package",
        "Change",
        "Adoption",
        "Passing",
        "Reproducible"
      ]
    },
    {
      "matchDatasources": ["gradle-version"],
      "prBodyColumns": ["Package", "Change", "OpenSSF"]
    }
  ]
}
